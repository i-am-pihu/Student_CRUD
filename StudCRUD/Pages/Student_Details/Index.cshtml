                @Html.DisplayNameFor(model => model.Students[0].StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].Last_Name)
            </th>
